<% provide(:title, 'Choose a new password') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= simple_form_for @user, url: reset_password_path(@token) do |f| %>
        <%= f.input :password, required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.submit "Set password", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
