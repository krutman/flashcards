<% provide(:title, 'Reset Password') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= simple_form_for :reset_password, url: reset_passwords_path do |f| %>
        <%= f.input :email, required: false %>
        <%= f.submit "Send reset instructions", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
