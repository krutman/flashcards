<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
    <div class="well">
      <%= simple_form_for deck do |f| %>
        <%= f.input :title, placeholder: 'Введите название колоды...', label: false %>
        <%= f.check_box :current %> Сделать колоду текущей
        <br>
        <br>
        <%= f.submit text, class: "btn btn-large btn-primary" %>
        <%= link_to 'Отмена', cancel_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
