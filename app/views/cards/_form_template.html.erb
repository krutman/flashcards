<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
    <div class="well">
      <%= simple_form_for @card do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit text, class: "btn btn-large btn-primary" %>
        <%= link_to 'Отмена', cards_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
