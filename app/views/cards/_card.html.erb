<div class="col-md-4 col-sm-6 item">
  <div class="content">
    <%= image_tag(card.cover.url, class: "img-responsive center-block cover") %>
    <p><%= card.original_text %></p>
    <p><%= card.translated_text %></p>
    <p><%= card.review_date.strftime("%d/%m/%Y") %></p>
  </div>
  <div class="edit-delete">
    <%= link_to "Редактировать", edit_card_path(card) %> |
    <%= link_to "Удалить", card, method: :delete, data: { confirm: "Вы уверены?" } %>
  </div>
</div>
