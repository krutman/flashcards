<% provide(:title, 'Login') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= render 'shared/signup_login_tabs' %>
    <div class="well">
      <%= simple_form_for :session, url: sessions_path do |f| %>
        <%= f.input :email, required: false %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean %>
        <p><%= link_to 'Forgot your password?', reset_passwords_path %></p>
        <%= f.submit "Login", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
